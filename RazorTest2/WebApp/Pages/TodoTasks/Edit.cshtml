@page
@model WebApp.Pages.TodoTasks.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>TodoTask</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="TodoTask.TodoTaskId" />
            <div class="form-group">
                <label asp-for="TodoTask.TodoTaskName" class="control-label"></label>
                <input asp-for="TodoTask.TodoTaskName" class="form-control" />
                <span asp-validation-for="TodoTask.TodoTaskName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="TodoTask.IsDone" /> @Html.DisplayNameFor(model => model.TodoTask.IsDone)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="TodoTask.TodoTaskPriorityId" class="control-label"></label>
                <select asp-for="TodoTask.TodoTaskPriorityId" class="form-control" asp-items="ViewBag.TodoTaskPriorityId"></select>
                <span asp-validation-for="TodoTask.TodoTaskPriorityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TodoTask.TodoTaskCategoryId" class="control-label"></label>
                <select asp-for="TodoTask.TodoTaskCategoryId" class="form-control" asp-items="ViewBag.TodoTaskCategoryId"></select>
                <span asp-validation-for="TodoTask.TodoTaskCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
